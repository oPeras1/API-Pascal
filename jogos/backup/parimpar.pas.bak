procedure ParImpar;
  var respostapi,nomepi,escolhapi:string;
    melhorde,escolhapinum,numrandom,numjogos,jogosganhosp,jogosganhosm,yppt1,yppt2,yppt3,escolhamaquina:integer;
  begin
    Beep(700,50);
    Randomize; //Gerar nova sequencia de numeros aleatorios
    respostapi:='s';
    stringfinal:='/_/    \__,_/_/     ';
    textbackground(lightgray);
    textcolor(black);
    clrscr;
    writeln;
    writeln;
    lenghtescolha:=(WindMaxX+1 - Length(stringfinal)+3) div 2+10;
    GotoXY(lenghtescolha-10,WhereY);
    writeln('    ____            ');
    GotoXY(lenghtescolha-10,WhereY);
    writeln('   / __ \____ ______');
    GotoXY(lenghtescolha-10,WhereY);
    writeln('  / /_/ / __ `/ ___/');
    GotoXY(lenghtescolha-10,WhereY);
    writeln(' / ____/ /_/ / /    ');
    GotoXY(lenghtescolha-10,WhereY);
    writeln(stringfinal);
    stringfinal:='\____/\__,_/ ';
    lenghtescolha:=(WindMaxX+1 - Length(stringfinal)+3) div 2+10;
    GotoXY(lenghtescolha-10,WhereY+1);
    writeln('   ____       ');
    GotoXY(lenghtescolha-10,WhereY);
    writeln('  / __ \__  __');
    GotoXY(lenghtescolha-10,WhereY);
    writeln(' / / / / / / /');
    GotoXY(lenghtescolha-10,WhereY);
    writeln('/ /_/ / /_/ / ');
    GotoXY(lenghtescolha-10,WhereY);
    writeln(stringfinal);
    stringfinal:='/___/_/ /_/ /_/ .___/\__,_/_/     ';
    lenghtescolha:=(WindMaxX+1 - Length(stringfinal)+3) div 2+10;
    GotoXY(lenghtescolha-10,WhereY+1);
    writeln('    ____                          ');
    GotoXY(lenghtescolha-10,WhereY);
    writeln('   /  _/___ ___  ____  ____ ______');
    GotoXY(lenghtescolha-10,WhereY);
    writeln('   / // __ `__ \/ __ \/ __ `/ ___/');
    GotoXY(lenghtescolha-10,WhereY);
    writeln(' _/ // / / / / / /_/ / /_/ / /    ');
    GotoXY(lenghtescolha-10,WhereY);
    writeln(stringfinal);
    GotoXY(lenghtescolha-10,WhereY);
    writeln('             /_/                  ');
    writeln;
    writeln;
    yppt2:=WhereY;
    repeat
      window(1,yppt2,WindMaxX,WindMaxY);
      clrscr;
      jogosganhosp:=0;
      jogosganhosm:=0;
      clrscr;
      somamedia:=0;
      GotoXY(lenghtescolha-10,WhereY);
      cursoron;
      write('Digite o seu nome: ');
      readln(nomepi);
      writeln;
      repeat
        GotoXY(lenghtescolha-10,WhereY);
        write('Melhor de:   jogos');
        GotoXY(lenghtescolha-10+11,WhereY);
        readln(melhorde);
        writeln;
        if (melhorde MOD 2)=0 then
          numjogos:=round(melhorde/2)+1
        else
          numjogos:=round(melhorde/2);
        if (melhorde<=0) then
          begin
            textcolor(red);
            stringfinal:='______Número Inválido______';
            GotoXY(lenghtescolha-5,WhereY);
            writeln('______               ______');
            GotoXY(lenghtescolha-5,WhereY);
            writeln(stringfinal);
            writeln;
            writeln;
            textcolor(black);
          end;
      until (melhorde>0);
      writeln;
      nomemaquina:=sysutils.GetEnvironmentVariable('COMPUTERNAME');
      stringfinal:=' <--- VS ---> ';
      GotoXY(((WindMaxX+1 - Length(stringfinal)) div 2)-Length(nomepi),WhereY);
      textcolor(cyan);
      writeln(nomepi,stringfinal,nomemaquina);
      writeln;
      yppt3:=WhereY;
      stringfinal:=IntToStr(jogosganhosp)+' - '+IntToStr(jogosganhosm);
      GotoXY((WindMaxX - Length(stringfinal)) div 2,WhereY);
      write(stringfinal);
      writeln;
      writeln;
      yppt1:=WhereY;
      repeat
        window(1,yppt1+23,WindMaxX,WindMaxY);
        textcolor(black);
        Randomize; //Gerar nova sequencia de numeros aleatorios
        numrandom:=random(9)+1; //Seleciona um numero aleatorio, de 0 até 9, somando 1, fica de 1 a 10
        escolhamaquina:=numrandom;
        repeat
          GotoXY(lenghtescolha-10,WhereY);
          write('Par ou ímpar? (P/I) ');
          readln(escolhapi);
          cursoroff;
          escolhapi:=lowercase(escolhapI);
          writeln;
          writeln;
          if (escolhapi<>'p') and (escolhapi<>'i') then
            begin
              textcolor(red);
              stringfinal:='______Opção Inválida______';
              GotoXY(lenghtescolha-5,WhereY);
              writeln('______               ______');
              GotoXY(lenghtescolha-5,WhereY);
              writeln(stringfinal);
              writeln;
              writeln;
              textcolor(black);
            end;
        until (escolhapi='p') or (escolhapi='i');
        repeat
          GotoXY(lenghtescolha-10,WhereY);
          write('Escolha um número de 1 a 10: ');
          readln(escolhapinum);
          cursoroff;
          writeln;
          writeln;
          if (escolhapinum<=0) or (escolhapinum>10) then
            begin
              textcolor(red);
              stringfinal:='______Opção Inválida______';
              GotoXY(lenghtescolha-5,WhereY);
              writeln('______               ______');
              GotoXY(lenghtescolha-5,WhereY);
              writeln(stringfinal);
              writeln;
              writeln;
              textcolor(black);
            end;
        until (escolhapinum<=10) and (escolhapinum>=1);
        if (escolhapi='i') then
          escolhapi:='Ímpar'
        else
          escolhapi:='Par';
        stringfinal:='O jogador '+nomepi+' escolheu '+escolhapi+' e escolheu o número '+IntToStr(escolhapinum)+' e o jogador '+nomemaquina+' escolheu '+IntToStr(escolhamaquina);
        GotoXY((WindMaxX - Length(stringfinal)) div 2,WhereY);
        writeln(stringfinal);
        if ((escolhapi='Ímpar') and (((escolhapinum+escolhamaquina) MOD 2) = 0)) or ((escolhapi='Par') and (((escolhapinum+escolhamaquina) MOD 2) <> 0)) then //Maquina vence
          begin;
            jogosganhosm:=jogosganhosm+1;
            if (escolhapi='Ímpar') then
              stringfinal:='O vencedor é: '+nomemaquina+', pois a soma de '+(IntToStr(escolhapinum))+'+'+(IntToStr(escolhamaquina))+'='+(IntToStr(escolhamaquina+escolhapinum))+' que é um número par'
            else
              stringfinal:='O vencedor é: '+nomemaquina+', pois a soma de '+(IntToStr(escolhapinum))+'+'+(IntToStr(escolhamaquina))+'='+(IntToStr(escolhamaquina+escolhapinum))+' que é um número ímpar'
            textcolor(red);
            GotoXY((WindMaxX - Length(stringfinal)) div 2,WhereY+1);
            writeln(stringfinal);
            textcolor(black);
          end
        else //Pessoa Vence
          begin
            jogosganhosp:=jogosganhosp+1;
            textcolor(green);
            if (escolhapi='Ímpar') then
              stringfinal:='O vencedor é: '+nomemaquina+', pois a soma de '+(IntToStr(escolhapinum))+'+'+(IntToStr(escolhamaquina))+'='+(IntToStr(escolhamaquina+escolhapinum))+' que é um número ímpar'
            else
              stringfinal:='O vencedor é: '+nomemaquina+', pois a soma de '+(IntToStr(escolhapinum))+'+'+(IntToStr(escolhamaquina))+'='+(IntToStr(escolhamaquina+escolhapinum))+' que é um número par';
            GotoXY((WindMaxX - Length(stringfinal)) div 2,WhereY+1);
            writeln(stringfinal);
            textcolor(black);
          end;
        stringfinal:='Pressione qualquer tecla para avançar';
        GotoXY((WindMaxX - Length(stringfinal)) div 2,WhereY+2);
        writeln(stringfinal);
        textcolor(cyan);
        window(1,yppt2,WindMaxX,WindMaxY);
        GotoXY(1,yppt3);
        stringfinal:=IntToStr(jogosganhosp)+' - '+IntToStr(jogosganhosm);
        GotoXY((WindMaxX - Length(stringfinal)) div 2,yppt3);
        write(stringfinal);
        window(1,yppt1+23,WindMaxX,WindMaxY);
        readkey;
        cursoron;
        clrscr;
      until (numjogos=jogosganhosp) or (numjogos=jogosganhosm);
      writeln;
      writeln;
      if (jogosganhosp>jogosganhosm) then
        begin
          textcolor(green);
          stringfinal:='Parabéns! Ganhaste o jogo contra '+nomemaquina+' de melhor de '+IntToStr(melhorde)+' jogos!';
          GotoXY((WindMaxX - Length(stringfinal)) div 2,WhereY+2);
          writeln(stringfinal);
        end
      else
        begin
          textcolor(red);
          stringfinal:=':( Perdeste o jogo contra '+nomemaquina+' de melhor de '+IntToStr(melhorde)+' jogos...';
          GotoXY((WindMaxX - Length(stringfinal)) div 2,WhereY+2);
          writeln(stringfinal);
        end;
      textcolor(black);
      GotoXY(lenghtescolha-10,WhereY+2);
      write('Pretende repetir? (S/N) ');
      readln(respostapi);
    until (lowercase(respostapi)<>'s');
    cursoroff;
    Beep(300,50);
    window(1,1,WindMaxX,WindMaxY);
  end;

